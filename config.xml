<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.myttpro.time.tracker"
	version 	= "1.0.0">

	<name>My Time Tracker Pro</name>

	<description>
		Time Tracker Pro is the easiest and fastest way to track your billable hours and generate high quality professional looking invoices
	</description>

	<author href="http://davids5.github.com"
		email="david_s5@nscdg.com.com">
		David Sidrane
	</author>

	<!-- the default attribute can also be used -->
	<icon src="assets/icons/icon48.png" gap:role="default" />  
	<!-- Android icons -->
	<icon src="assets/icons/icon36.png" width="36" height="36"/>
	<icon src="assets/icons/icon48.png" width="48" height="48"/>
	<icon src="assets/icons/icon72.png" width="72" height="72"/>  
	<!-- if a single splash screen is specified it will be used for all platforms -->

	<gap:splash src="assets/images/spash-bb.png" gap:platform="blackberry" />

	<gap:splash src="assets/images/splash-320x480png" width="320" height="480" />
	<gap:splash src="assets/images/splash-640x960.png" width="640" height="960" />
	<gap:splash src="assets/images/splash-.png-1024x768.png" width="1024" height="768" />
	<gap:splash src="assets/images/splash-.png-768x1024.png" width="768" height="1024" />

	<gap:splash src="assets/images/splash-ldpi.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="assets/images/splash-mdpi.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="assets/images/splash-hdpi.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="assets/images/splash-xdpi.png" gap:platform="android" gap:density="xdpi" />

	<feature name="http://api.phonegap.com/1.0/network"/>
	<gap:plugin name="ChildBrowser" version="~3" /> 

	<preference name="orientation" value="default" />
	<preference name="fullscreen" value="false" />
	<preference name="stay-in-webview" value="true" />
	

	<access origin="*" subdomains="true" />

</widget>
