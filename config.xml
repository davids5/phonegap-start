<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.myttpro.time.tracker"
	version 	= "1.0.0">

	<name>My Time Tracker Pro</name>

	<description>
		Time Tracker Pro is the easiest and fastest way to track your billable hours and generate high quality professional looking invoices
	</description>

	<author href="http://davids5.github.com"
		email="david_s5@nscdg.com.com">
		David Sidrane
	</author>

	<!-- the default attribute can also be used -->
	<icon src="assets/icons/icon48.png" gap:role="default" />  
	<!-- Android icons -->
	<icon src="assets/icons/icon36.png" width="36" height="36"/>
	<icon src="assets/icons/icon48.png" width="48" height="48"/>
	<icon src="assets/icons/icon72.png" width="72" height="72"/>  
	<!-- if a single splash screen is specified it will be used for all platforms -->
	<gap:splash src="assets/icons/icon72.png" />

	<feature name="http://api.phonegap.com/1.0/network"/>
	<gap:plugin name="ChildBrowser" version="~3" /> 

	<preference name="orientation" value="portrait" />
	<access origin="*" subdomains="true" />

</widget>
